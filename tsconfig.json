{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,

    // Only for decorator-based example:
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": [
      "esnext"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
